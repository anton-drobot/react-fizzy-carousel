{
  "name": "react-fizzy-carousel",
  "version": "1.0.6",
  "description": "Pure React carousel",
  "main": "lib/index.js",
  "module": "es/index.js",
  "scripts": {
    "test": "npm run typecheck && npm run lint",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./",
    "build": "rm -rf ./lib ./es ./docs ./docs-build && tsc --module esnext --outDir ./es && tsc --module commonjs --outDir ./lib && npm run build-storybook",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o ./docs"
  },
  "files": [
    "es",
    "lib",
    "src",
    "styles.css"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anton-drobot/react-fizzy-carousel.git"
  },
  "keywords": [
    "react",
    "carousel",
    "slider"
  ],
  "author": "Anton Drobot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anton-drobot/react-fizzy-carousel/issues"
  },
  "homepage": "https://github.com/anton-drobot/react-fizzy-carousel#readme",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@storybook/addon-actions": "^5.3.17",
    "@storybook/addon-info": "^5.3.17",
    "@storybook/addon-links": "^5.3.17",
    "@storybook/addons": "^5.3.17",
    "@storybook/react": "^5.3.17",
    "@types/lodash.throttle": "^4.1.6",
    "@types/react": "^16.9.23",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "react-docgen-typescript-loader": "^3.7.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "dependencies": {
    "lodash.throttle": "^4.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  }
}
